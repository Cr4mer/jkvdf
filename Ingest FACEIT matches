name: Ingest FACEIT matches

on:
  schedule:
    - cron: "*/10 * * * *"
  workflow_dispatch:

permissions:
  contents: write

jobs:
  ingest:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout repo
        uses: actions/checkout@v4

      - name: Setup Node
        uses: actions/setup-node@v4
        with:
          node-version: 20

      - name: Run ingest
        env:
          FACEIT_API_KEY: ${{ secrets.FACEIT_API_KEY }}
        run: |
          node -v
          node scripts/ingest.mjs

      - name: Commit changes
        run: |
          if [[ -n "$(git status --porcelain)" ]]; then
            git config user.name "github-actions[bot]"
            git config user.email "github-actions[bot]@users.noreply.github.com"
            git add data/matches.json data/state.json
            git commit -m "chore(ingest): update matches/state"
            git push
          else
            echo "No changes to commit"
          fi
